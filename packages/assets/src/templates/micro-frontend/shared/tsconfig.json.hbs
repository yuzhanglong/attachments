{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "baseUrl": "src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "~src/*": [
        "./*"
      ]
    },
    "types": [
      "node"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "downlevelIteration": true
  },
  "include": [
    "src"
  ]
}
